<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <p>
    <% if task.completed? %>
      &#9745;
    <% else %>
      &#9744;
    <% end %>

    <%= link_to task.title, task_path(task) %>
    <%= link_to 'Delete', task_path(task), method: :delete %>
  </p>
<% end %>

<p><%= link_to 'Create new task!', new_path %></p>

