<h1> Edit task! </h1>

<%= form_for @task do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :details %>
  <%= f.text_field :details %>
</div>

<div>

<div>
  <p><%= f.check_box :completed %> Mark as complete!</p>
</div>

  <%= f.submit %>

<% end %>

<p><%= link_to 'Go Back!', tasks_path %></p>
